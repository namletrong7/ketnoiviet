<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingVertical="20dp"
    android:background="@drawable/custom_background_gray"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/groupSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/btnPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:buttonTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="20dp"
            android:text="chỉ mình tôi"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/btnPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="20dp"
            android:text="Công khai"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
      <TextView
          android:fontFamily="sans-serif-medium"
          android:id="@+id/btnCancel"
          android:layout_gravity="center"
          android:text="Bỏ qua"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="15dp"
          android:layout_width="100dp"
          android:layout_height="40dp"/>
        <TextView
            android:id="@+id/btnUpdate"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:text="Cập nhập"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:background="@drawable/custom_background_white"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>